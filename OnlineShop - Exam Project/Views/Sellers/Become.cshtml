@model BecomeSellerFormModel

@{
    ViewBag.Title = "Become Seller";
}

<div class="row">
    <divc class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h3 class="heading-margin">Become Seller</h3>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Account Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359-888-888">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary float-right" type="submit" value="Save" />

        </form>
    </divc>
</div>
