@model AddShopFormModel

@{
    ViewData["Title"] = "Online Shop";
}

<div class="row">
    <divc class="offset-md-3 col-md-6 col-sm-12">
        <h3 class="heading-margin">Add Product</h3>
        <form method="post">
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Cloths, Swimwear, Underwear etc..">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Size"></label>

                <select asp-for="Size" class="form-control">
                    <option>S</option>
                    <option>M</option>
                    <option>L</option>
                    <option>XL</option>
                </select>
                <span asp-validation-for="Size" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Top products"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your image here">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">

                    @foreach (var category in Model.Categorys)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <input class="btn btn-primary mt-4 float-right" type="submit" value="Save" />
        </form>
    </divc>
</div>


