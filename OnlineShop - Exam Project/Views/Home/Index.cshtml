@model IndexViewModel

@{
    ViewData["Title"] = "Online Shop";
}

@{
    var products = Model.Products;
    var firstItem = products.Any() ? products[0] : null;
    var secondItem = products.Count > 1 ? products[1] : null;
    var thirdItem = products.Count > 2 ? products[2] : null;
}

@if (!products.Any())
{<div class="jumbotron">
        <h1 class="display-4">Wellcome to the chest of goods!</h1>
        <p class="lead">There arent any goods, why dont you add some?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Shop" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Product</a>
        </p>
    </div>

}

<div class="mb-3"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstItem != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstItem.ImageUrl" alt="@firstItem.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shop" asp-action="Details" asp-route-id="@firstItem.Id"> @firstItem.Model</a></h5>
                </div>
            </div>
        }
        
        @if (secondItem != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondItem.ImageUrl" alt="@secondItem.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shop" asp-action="Details" asp-route-id="@secondItem.Id"> @secondItem.Model</a></h5>
                </div>
            </div>
        }

        @if (thirdItem != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdItem.ImageUrl" alt="@thirdItem.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shop" asp-action="Details" asp-route-id="@thirdItem.Id"> @thirdItem.Model</a></h5>
                </div>
            </div>
        }

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="mb-3"></div>
<div class="jumbotron">
    <div class="row">

        <h2 class=" col-md-4 text-center">
            @Model.TotalProducts Products
        </h2>

        <h2 class=" col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
    </div>
</div>